<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90sp"
    android:layout_margin="5sp"
    android:layout_marginBottom="0sp"
    android:paddingEnd="10sp"
    android:paddingStart="10sp"
    android:id="@+id/leader_board_item"
    android:background="@drawable/recycler_item_bg"

    >

    <TextView
        android:id="@+id/name_lb_tv"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5sp"
        android:layout_marginBottom="53sp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12sp"
        android:layout_marginRight="7sp"
        android:layout_toLeftOf="@+id/score_lb_tv"
        android:text="Score : "
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/score_lb_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5sp"
        android:layout_marginTop="13sp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="5sp"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        android:layout_toLeftOf="@+id/max_lb_tv"
        android:text="Max Score : "
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/max_lb_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="20sp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        />


</RelativeLayout>